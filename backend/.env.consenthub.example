# ===========================================
# ConsentHub Integration Environment Variables
# ===========================================

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGO_URI=mongodb://localhost:27017/consenthub-users

# ===========================================
# ConsentHub API Configuration (REQUIRED)
# ===========================================

# Base URL for ConsentHub backend API
# This should point to your deployed ConsentHub backend
CONSENTHUB_API=https://consenthub-backend.onrender.com/api/v1

# Internal API key for ConsentHub service authentication
# Generate a secure API key for production use
INTERNAL_API_KEY=your-secure-api-key

# ===========================================
# Frontend Configuration
# ===========================================
FRONTEND_URL=http://localhost:5173

# ===========================================
# Security Configuration
# ===========================================
JWT_SECRET=your-jwt-secret-key-change-in-production
SESSION_SECRET=your-session-secret-key-change-in-production

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info

# ===========================================
# Email Configuration (Optional - for future use)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ===========================================
# Rate Limiting Configuration
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# ConsentHub Integration Settings (Optional)
# ===========================================

# Timeout for ConsentHub API calls (in milliseconds)
CONSENTHUB_TIMEOUT=10000

# Enable/disable ConsentHub integration (true/false)
CONSENTHUB_ENABLED=true

# Default consent status for new registrations
DEFAULT_CONSENT_STATUS=pending

# Default language for new parties
DEFAULT_LANGUAGE=en

# ===========================================
# Development & Testing
# ===========================================

# Enable debug logging for ConsentHub service
DEBUG_CONSENTHUB=false

# ConsentHub service health check interval (in minutes)
HEALTH_CHECK_INTERVAL=5
